  <script>
    // Lightweight in-page helper: lists loaded stylesheets for quick checks
    (function () {
      var btn = document.getElementById('runDiagnostics');
      var out = document.getElementById('diagOutput');
      if (!btn || !out) return;
      btn.addEventListener('click', function () {
        var lines = [];
        Array.from(document.styleSheets || []).forEach(function (ss) {
          try { lines.push(ss.href || '[inline stylesheet]'); } catch (e) {}
        });
        out.textContent = 'Loaded stylesheets: ' + (lines.length ? lines.join(' | ') : 'none');
      });
    })();
  </script>
